<div class="form-container">
  <div class="form-errors">
    <% @comment.errors.full_messages_for(:title).each do |msg| %>
      <div class="error"><%= msg %></div>
    <% end %>
    <% @comment.errors.full_messages_for(:text).each do |msg| %>
      <div class="error"><%= msg %></div>
    <% end %>
  </div>
  
  <div class="form">
    <h2>Create a new comment</h2>

    <%= form_with(model: @comment, url: user_post_comments_path(@user, @post), local: true) do |form| %>
      <div class="form-group">
        <%= form.label :text, class: "form-label" %>
        <%= form.text_area :text, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.submit "Create comment", class: "btn btn-primary" %>
        <%= link_to "Cancel", user_post_path(id: @post.id, user_id: @user.id), class: "btn btn-secondary cancel-link" %>
      </div>
    <% end %>
  </div>
</div>
